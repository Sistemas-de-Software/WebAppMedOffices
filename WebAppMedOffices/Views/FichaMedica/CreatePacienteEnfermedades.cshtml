@model WebAppMedOffices.Models.PacienteEnfermedadView

@{
    ViewBag.Title = "Nueva Enfermedad";
}

<h2>Nueva Enfermedad</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Enfermedad</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PacienteId)
    @Html.HiddenFor(model => model.TurnoId)

    <div class="form-group">
        @Html.LabelFor(model => model.EnfermedadId, "Enfermedad", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("EnfermedadId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EnfermedadId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Agregar" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "PacienteEnfermedades", new { pacienteId = Model.PacienteId, turnoId = Model.TurnoId }, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
