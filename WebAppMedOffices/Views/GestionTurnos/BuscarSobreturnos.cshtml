@model IEnumerable<WebAppMedOffices.Models.Turno>

@{
    ViewBag.Title = "Sobreturnos";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">

<h2>Sobreturnos</h2>

<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Especialidad.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Especialidad.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medico.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.ActionLink("Asignar Sobreturno", "AsignarSobreturno", new { id = item.Id, pacienteId = ViewBag.PacienteId }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function() {
            $('#table_id').DataTable();
        } );
    </script>
}