@model WebAppMedOffices.Models.Turno

@{
    ViewBag.Title = "Turno";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">Comprobante de Turno</h4>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-info">
                                <strong>Nombre:</strong> @Model.Paciente.NombreCompleto
                            </li>
                            <li class="list-group-item">
                                <strong>Especialidad:</strong> @Model.Especialidad.Nombre
                            </li>
                            <li class="list-group-item">
                                <strong>Médico:</strong> @Model.Medico.NombreCompleto
                            </li>
                            <li class="list-group-item">
                                <strong>Fecha y Hora:</strong> @Model.FechaHora
                            </li>

                            @if (Model.TieneOS)
                            {
                                <li class="list-group-item">
                                    <strong>Obra Social:</strong> @Model.ObraSocial.Nombre
                                </li>
                            }
                            @if (!Model.TieneOS)
                            {
                                <li class="list-group-item">
                                    <strong>Costo:</strong> @Model.Costo
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>