        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "ListaPacientes", new { }, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(function () {
            $("#ObraSocialId").change(function () {
                ToggleDropdown();
            });
            ToggleDropdown(); // Done to ensure correct hiding/showing on page reloads due to validation errors
        });

        function ToggleDropdown() {
            if ($("#ObraSocialId").val() != 1) {
                $("#optional").show();
            } else {
                $("#optional").hide();
            }
        };
    </script>
}
